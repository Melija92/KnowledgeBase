@{
    ViewBag.Title = "EntityFrameworkIndex";
}
<script type="text/javascript">

    $(document).ready(function () {
        $('#Efsearch').focus();
    });
    $(function () {
        var $rows = $('#eftable tr');
        $('#Efsearch').keyup(function () {

            var val = '^(?=.*\\b' + $.trim($(this).val()).split(/\s+/).join('\\b)(?=.*\\b') + ').*$',
                reg = RegExp(val, 'i'),
                text;

            $rows.show().filter(function () {
                text = $(this).text().replace(/\s+/g, ' ');
                return !reg.test(text);
            }).hide();
        });
    });
</script>
<div>
    <div>
        <input type="text" class="form-control pull-right searchBackgroundInner" id="Efsearch" placeholder="Search Articles" />
    </div>
    <br />
    <div style="width:100%; border-bottom:1px solid gray;"> &nbsp;</div>
    <br />
    <br />

    <div>
        <table id="eftable" class="table-hover" style="width:100%;">
            @foreach (var x in KBArticles.GetEntityFrameworkList().ToList())
            {
                <tr>
                    <td style="padding:10px;">
                        <span class="glyphicon glyphicon-menu-right"></span>&nbsp;&nbsp;<a style="text-decoration:none; color:#2C3E50;" href="@x.ArticleURL">@x.ArticleName</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

